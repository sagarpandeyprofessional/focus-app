{
  "name": "focus-app",
  "version": "1.0.0",
  "description": "Smart Multi-Screen Sharing with Intent-Based Focus â€” Internal Enterprise Tool",
  "main": "dist/main/index.js",
  "author": "FOCUS Team",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "copy-assets": "node -e \"const fs=require('fs');const p=require('path');const s='src/renderer';const d='dist/renderer';fs.mkdirSync(d,{recursive:true});['index.html','styles.css'].forEach(f=>fs.copyFileSync(p.join(s,f),p.join(d,f)));console.log('Assets copied.')\"",
    "build": "tsc && npm run copy-assets",
    "start": "npm run build && electron .",
    "start:signaling": "ts-node src/signaling/server.ts",
    "dev": "concurrently \"tsc -w\" \"npm run copy-assets\" \"electron .\"",
    "test": "jest --config jest.config.js",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "ws": "^8.16.0",
    "uuid": "^9.0.0",
    "electron-log": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.0",
    "@types/uuid": "^9.0.0",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "electron-builder": "^24.9.0"
  }
}
